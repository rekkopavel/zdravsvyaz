{% extends 'base.html.twig' %}

{% block title %}Paste index{% endblock %}

{% block body %}
    <h1>Paste index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paste in pastes %}
            <tr>
                <td>{{ paste.id }}</td>
                <td>{{ paste.name }}</td>
                <td>{{ paste.content }}</td>
                <td>
                    <a href="{{ path('app_paste_show', {'id': paste.id}) }}">show</a>
                    <a href="{{ path('app_paste_edit', {'id': paste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_paste_new') }}">Create new</a>
{% endblock %}
